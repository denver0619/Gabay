<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/TripDetails_ItemList_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/TripDetails_ItemList_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Insert Item Here"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/TripDetails_ItemList_Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="â‚± 710.00" />

        <ImageButton
            android:id="@+id/TripDetails_ItemList_Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_circle"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:padding="6dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>