<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Categories_CategoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_white_small"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="18dp"
        android:paddingRight="24dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Categories_CategoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_transportation"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/Categories_CategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transportation Fare"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>