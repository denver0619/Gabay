<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/Spending_ExpenseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_border_white_small"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingTop="14dp"
            android:paddingRight="24dp"
            android:paddingBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Spending_ExpenseCategoryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="12sp"
                android:src="@drawable/ic_category_transportation" />


            <TextView
                android:id="@+id/Spending_ExpenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Transportation"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Spending_ExpenseMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="â‚± 110.00"

                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>